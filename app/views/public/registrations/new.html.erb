<div class="container">
  <div class="row">
    <div class="mt-3 mx-auto">
      <h1>新規登録</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "layouts/errors", obj: resource %>
        <div class="field form-group">
          <%= f.label :name, "名前", class: "font-weight-bold" %><br>
          <%= f.text_field :name %>
        </div>

        <div class="field form-group">
          <%= f.label :email, "メールアドレス", class: "font-weight-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field form-group">
          <%= f.label :password, "パスワード", class: "font-weight-bold" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation, "パスワード確認", class: "font-weight-bold" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>
        <p>
          ログインの方はこちら
          <%= render "public/shared/links" %>
        </p>
    </div>
  </div>
</div>
