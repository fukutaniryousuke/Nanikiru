<div class="back-image">
  <div class="container">
    <div class="row">
      <div class="mt-3 col-12">
        <h2>ログイン</h2>
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group row">
            <%= f.label :email, "メールアドレス", class: "col-md-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-3" %>
          </div>
        
          <div class="field form-group row">
            <%= f.label :password, "パスワード", class: "col-md-2" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "col-3" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        
          <div class="actions">
            <%= f.submit "ログイン" %>
          </div>
        <% end %>
        
        <p>新規登録がまだの方はこちら<%= render "public/shared/links" %></p>
      </div>
    </div>
  </div>
</div>