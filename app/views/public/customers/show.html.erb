<div class="mt-4 container">
  <div class="row">
    <div class="col-md-9">
      <h1>
        <% if current_customer %>
         <%= image_tag "senten", size: "70x70" %>マイページ<%= image_tag "senten", size: "70x70" %>
        <% else %>
         <%= @customer.name %>さん
        <% end %>
      </h1>
      <h2>
        <% if @customer.profile_image.attached? %>
         <%= image_tag @customer.profile_image, size: "100x100", class: "profile_image" %>
        <% else %>
         <%= image_tag "majan", size: "100x100", class: "profile_image" %>
        <% end %>
      </h2>
      <table class="table" width="100">
        <tr class="row">
          <th class="col-3">ユーザーID</th>
          <td class="col-2"><%= @customer.id %></td>
        </tr>
        <tr class="row">
          <th class="col-3">名前</th>
          <td class="col-2"><%= @customer.name %></td>
        </tr>
      </table>
        <% if current_customer %>
          <% if @customer.name != "guestuser" %>
            <%= link_to edit_customers_path, class: "col-5 btn btn-secondary btn-block" do %>
             <i class="fas fa-user-cog"></i>編集
            <% end %>
          <% end %>
        <% end %>
       
    </div>
  </div>
</div>
