<div class="container" style="padding-top: 100px;">
  <div class="row">
    <div class="mx-auto">
      <h1 class="mt-4">編集</h1>
      <%= render "layouts/errors", obj: @post_image %>
    </div>
  </div>
  <div class="row">
    <div class="mt-4 col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @post_image do |f| %>
        <div class="mt-4 form-group row">
          <%= f.label :title, "局面", class: "col-2" %>
          <%= f.text_field :title, placeholder: "東１局 １巡目 東家", class: "col-5" %>
        </div>
        <div class="form-group row">
          <%= f.label :image, "画像", class: "col-2" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group row">
          <%= f.label :body, "コメント", class: "col-3" %>
          <%= f.text_area :body, size: "80x10" %>
        </div>
        <%= f.submit "変更を保存する" %>
      <% end %>
    </div>
  </div>
</div>