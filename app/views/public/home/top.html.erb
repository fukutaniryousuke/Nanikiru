<% if customer_signed_in? %>
  <%= render "public/home/login_top" %>
<% else %>
  <div class="container">
    <div class="row">
      <div class="mx-auto">
        <h2 class="top font-italic">何切る？</h2>
        <%= image_tag "top.jpg", size: "600x300", class: "top_image" %>
        <%= link_to 'ゲストログイン（閲覧用）', customers_guest_sign_in_path, class: "mt-5 shadow-lg btn btn-secondary btn-block sign_in", method: :post %>
        <%= link_to "新規登録", new_customer_registration_path, class: "mt-3 shadow-lg btn btn-primary btn-block" %>
        <%= link_to "ログイン", new_customer_session_path, class: "mt-3 shadow-lg btn btn-info btn-block" %>
      </div>
    </div>
  </div>
<% end %>