<div class="container" style="padding-top: 100px">
  <div class="row">
    <div class="mt-5 mx-auto">
      <!--検索バーを表示-->
      <div class="mx-auto search-box" style="width: 300px;">
        <%= form_with url: books_search_path , method: :get, local: true do |f| %>
            <%= f.text_field :keyword, class: "form-control", required: true %>
            <%= f.submit '本の題名を検索', class: "form-control btn btn-success" %>
        <% end %>
      </div>

      <!--検索結果を表示-->
      <% if @books.present? %>
        <div class="mt-3 row card-wrapper">
          <% @books.each do |book| %>
            <div class ="mr-2 mb-2 card mx-auto" style="width: 15rem;">
        <!--#以下のコードではは画像、タイトル、著者名、商品の説明を表示させています。-->
              <%= link_to (image_tag(book.medium_image_url, size: "150x200")), book.item_url, style: "padding-left: 40px;" %>
              <div class="card-body">
                <div class="card-title"><%= book.title %></div>
                <div class="card-text"><%= book.author %></div>
              </div>
            </div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>