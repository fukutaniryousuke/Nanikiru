<div class="container">
  <div class="row">
    <div class="mt-5 col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>管理者ログイン</h2>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mt-3 field form-group row">
          <%= f.label :email, "メールアドレス", class: "col-6 font-weight-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-6" %>
        </div>
      
        <div class="field form-group row">
          <%= f.label :password, "パスワード", class: "col-6 font-weight-bold" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "col-6" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
      
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>