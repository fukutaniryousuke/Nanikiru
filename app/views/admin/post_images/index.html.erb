<div style="padding-top: 130px;">
  <div class="container">
    <div class="row">
      <div class="mt-3 mx-auto">
        <% @post_images.each do |post_image| %>
          <div class="mb-4 card" style="border-radius: 1em; width: 472px;">
            <div class="card-header">
              <%= link_to admin_customer_path(post_image.customer.id) do %>
                <% if post_image.customer.profile_image.attached? %>
                  <%= image_tag post_image.customer.profile_image, size: "45x45" %>
                <% else %>
                  <%= image_tag "majan", size: "45x45", class: "profile_image" %>
                <% end %>
              <% end %>
              <%= link_to post_image.title, admin_post_image_path(post_image), class: "ml-4 text-reset text-decoration-none" %>
              <%= link_to admin_post_image_path(post_image), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "ml-3 text-danger" do %>
                <i class="fa-solid fa-trash-can"></i>
              <% end %>
            </div>
              <%= link_to admin_post_image_path(post_image) do %>
                <%= image_tag post_image.image, size: "470x450" %>
              <% end %>
            <div class="card-body">
              <%= post_image.body.truncate(29) %>
                <% if post_image.body.size >= 29 %>
                    <%= link_to admin_post_image_path(post_image.id) do %>
                       <p>続きを読む</p>
                  <% end %>
                <% end %><br>
               コメント<%= post_image.post_comments.count %>件
               <%= render "public/favorites/count", post_image: post_image %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>