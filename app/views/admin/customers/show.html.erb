<div class="container">
  <div class="row">
    <div class="mt-5 col-12 mx-auto">
      <h2><%= @customer.name %>さん詳細</h2>
        <table class="mt-3 table">
          <tr>
            <th>名前</th>
            <td><%= @customer.name %></td>
          </tr>
          <tr>
            <th>イメージ画像</th>
            <td>
              <% if @customer.profile_image.attached? %>
               <%= image_tag @customer.profile_image, size: "60x60" %>
              <% else %>
               <%= image_tag "majan", size: "60x60" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <% if @customer.is_deleted %>
               退会
              <% else %>
               <span class="text-success font-weight-bold">有効</span>
              <% end %>
            </td>
          </tr>
        </table>
      <%= link_to "変更", edit_admin_customer_path(@customer), class: "btn btn-primary" %>
    </div>
  </div>
</div>