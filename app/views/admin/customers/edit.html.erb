<div class="container">
  <div class="row">
    <div class="m-5 mx-auto">
      <h2><%= @customer.name %>さん編集</h2>
        <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
          <div class="form-group">
            <%= f.label :id, "会員ID" %>
            <%= @customer.id %>
          </div>
          <div class="form-group">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.label :profile_image, "画像" %>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email %>
          </div>
          <div class="form-group">
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効", class: "text-success font-weight-bold" %>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会" %>
          </div>
          <%= f.submit "変更" %>
        <% end %>
    </div>
  </div>
</div>